@using ShoseStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ShoseStore.Models.CTHOADON>

@{
    ViewBag.Title = "CTDDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<hr />
<h2>CHI TIẾT HÓA ĐƠN</h2>

<table class="table">
    <tr>
        <th>
            Mã DDH
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Size
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>Chi tiết</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DONDATHANG.MADDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SANPHAM.TENSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SIZE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SOLUONG)
        </td>
        <td>
            @String.Format("{0:0,0}",item.DONGIA) VNĐ
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "DetailsCTDDH", new { id = item.MADDH })
        </td>
    </tr>
}

</table>
@*tao lien ket trang*@
   Trang@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("CTDDH", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>