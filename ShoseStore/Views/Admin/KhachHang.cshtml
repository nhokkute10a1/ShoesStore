@using ShoseStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ShoseStore.Models.KHACHHANG>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<h2>THÔNG TIN KHÁCH HÀNG</h2>


<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Tài khoản
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Email
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ngày sinh
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HOTEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TAIKHOAN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MATKHAU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIACHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @String.Format("{0:dd/MM/yyyy}",item.NGAYSINH)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "DetailsKH", new { id=item.MAKH }) 
        </td>
    </tr>
}

</table>
@*tao lien ket trang*@
   Trang@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("KhachHang", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>