@model ShoseStore.Models.SANPHAM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SÁCH</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAISP.TENLOAI)
        </dd>

        <dt>
            Tên NSX:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHASANXUAT.TENNSX)
        </dd>

        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENSP)
        </dd>

        <dt>
            Size:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SIZE)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @String.Format("{0:0,0}",Model.GIABAN) VNĐ
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px;text-align:justify">
            @Html.DisplayFor(model => model.MOTA)
        </dd>

        <dt>
            Ảnh sản phẩm:
        </dt>

        <dd>
            <img src="@Url.Content("~/images/sanpham/"+Model.ANHBIA)" width="120px"/>
        </dd>

        <dt>
            Ngày cập nhập:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}",Model.NGAYCAPNHAP)
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SOLUONGTON)
        </dd>

        <dt>
            Lượt mua:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LUOTMUA)
        </dd>

        <dt>
            Giảm giá:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GIAMGIA)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MASP }) |
    @Html.ActionLink("Quay về trang trước", "SanPham")
</p>
